<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/style_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textSize="18sp"
            android:onClick="onBack"
            android:drawableLeft="@drawable/ic_setting_back"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:text="返回"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="当前设备信息" />


    </RelativeLayout>

    <cn.hallowebsite.setting.view.PhoneModelView
        android:layout_width="match_parent"
        android:id="@+id/phone_model"
        android:layout_marginTop="50dp"
        android:layout_height="match_parent"/>
    
    <LinearLayout
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="屏幕分辨率：1080*1920"
            android:id="@+id/screen_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="应用区宽高：1080*1920"
            android:id="@+id/app_area" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="状态栏高度：1080"
            android:id="@+id/status_height" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="View布局区域宽高：1080*1092"
            android:id="@+id/context_area" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="像素密度：3"
            android:id="@+id/density" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击模型查看各区域所代表的的区域名称" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_area_name"
            android:text="当前选中区域：无" />

    </LinearLayout>

</RelativeLayout>